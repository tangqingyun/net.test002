        <size value="4000" />
        <layout type="Uni2uni.LocalLife.Log.CommonPatternLayout, Uni2uni.LocalLife.Log">
          <conversionPattern value="%property{UrlShort}" />
        </layout>
      </parameter>
      <parameter>
        <parameterName value="@urlFull" />
        <dbType value="String" />
        <size value="4000" />
        <layout type="Uni2uni.LocalLife.Log.CommonPatternLayout, Uni2uni.LocalLife.Log">
          <conversionPattern value="%property{UrlFull}" />
